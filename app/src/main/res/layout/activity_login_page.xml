<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".LoginPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:id="@+id/layout1"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="17dp"
            android:text="Enter your phone number"/>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="18dp"
            android:layout_toRightOf="@id/text1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/options"/>

        <TextView
            android:layout_below="@id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/whatsappTxt"
            android:layout_margin="10dp"
            android:text="WhatsApp will need to verify your phone number. Whatâ€™s my number? "/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/india"
            android:layout_below="@id/whatsappTxt"/>

        <EditText
            android:layout_width="80dp"
            android:text="+ 91 "
            android:id="@+id/countryCode"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_below="@id/india"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_toRightOf="@id/countryCode"
            android:layout_below="@id/india"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryCode"
            android:gravity="center"
            android:inputType="number"
            android:layout_margin="10dp"
            android:text="Carrier charges may apply"/>

    </RelativeLayout>


</RelativeLayout>